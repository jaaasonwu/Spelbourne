<!doctype html>
<html>
<head>
    <meta charset="utf-8">

    <!-- Angularjs -->
    <meta name="google-signin-client_id"
          content="523892883118-akcfr1q4mg78ffrfttcil34emeuqkpd5.apps.googleusercontent.com">

    <link rel="stylesheet" href="/dependency/angular/angular-material.min.css">

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="/dependency/bootstrap/css/bootstrap.css">
    <!-- Optional theme -->
    <link rel="stylesheet" href="/dependency/bootstrap/css/bootstrap-theme.css">
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://apis.google.com/js/platform.js" async defer></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBElRERsxK0HlYKRgZDcDFQHClGyUEGbS8&libraries=places&&language=en-US"
            async defer></script>
    <script src="/dependency/requireJs/require.min.js" data-main="config"></script>
    <link rel="stylesheet" href="/stylesheets/main.css">
    <base href="/">
</head>

<body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">

        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-brand navbar-brand-centered">
                <b>
                    <a href="/">
                        Spelbourne
                    </a>
                </b>
            </div>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div  class="collapse navbar-collapse" id="navbar-brand-centered" >

            <ul class="nav navbar-nav">
                <a href="/"  class="navbar-brand"><img class="logoImg" src="images/logo.png"></a>

            </ul>

            <ul class="nav navbar-nav navbar-right" ng-if="!username">
                <li><a href="/signup?ret={{location.path()}}">Sign Up</a></li>
                <li><a href="/login?ret={{location.path()}}">Login</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right" ng-if="username">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <span class="glyphicon glyphicon-user ">
                                <span class="glyphicon glyphicon-option-vertical "></span></span></a>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li><a href="#">{{username}} </a></li>
                        <li><a href="/profile">My Account <span class="glyphicon glyphicon-cog pull-right"></span></a></li>
                        <li class="divider"></li>
                        <li><a href="#">User stats <span class="glyphicon glyphicon-stats pull-right"></span></a></li>
                        <li class="divider"></li>
                        <li><a href="#">Messages <span class="badge pull-right"> 0 </span></a></li>
                        <li class="divider"></li>
                        <li><a href="/" ng-click="logOut()">Sign Out <span class="glyphicon glyphicon-log-out pull-right"></span></a></li>
                    </ul>
                </li>

            </ul>
        </div><!-- /.navbar-collapse -->

    </nav>
    <div id="main" class="row">
        <div ng-view></div>
    </div>
    <div class="push"></div>
    <hr>
</body>
<footer>
    <p>Created By: Team Tam @ University of Melbourne</p>
</footer>
</html>
